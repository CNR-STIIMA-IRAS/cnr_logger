# - Config file for the ${PROJECT_NAME} package
# It defines the following variables
#  ${PROJECT_NAME}_INCLUDE_DIRS - include directories for FooBar
#  ${PROJECT_NAME}_LIBRARIES    - libraries to link against
#  ${PROJECT_NAME}_EXECUTABLE   - the bar executable

@PACKAGE_INIT@

include(CMakeFindDependencyMacro)
## common
find_dependency(Boost COMPONENTS date_time filesystem system)
find_dependency(PkgConfig)
pkg_check_modules(Log4cxx REQUIRED liblog4cxx IMPORTED_TARGET)
pkg_check_modules(YAML_CPP REQUIRED yaml-cpp IMPORTED_TARGET)
find_dependency(Threads)

set_and_check(${PROJECT_NAME}_INCLUDE_DIRS "@PACKAGE_INCLUDE_INSTALL_DIR@" ${Boost_INCLUDE_DIRS} ${PkgConfig_INCLUDE_DIRS} ${Log4cxx_INCLUDE_DIRS} ${YAML_CPP_INCLUDE_DIRS})

# Our library dependencies (contains definitions for IMPORTED targets)
include("${CMAKE_CURRENT_LIST_DIR}/@TARGETS_EXPORT_NAME@.cmake")

# These are IMPORTED targets created by ${PROJECT_NAME}Targets.cmake
set(${PROJECT_NAME}_LIBRARIES @EXPORTED_TARGETS_LIST@ ${Boost_LIBRARIES} ${PkgConfig_LIBRARIES} ${Log4cxx_LIBRARIES} ${YAML_CPP_LIBRARIES})

check_required_components(${PROJECT_NAME})